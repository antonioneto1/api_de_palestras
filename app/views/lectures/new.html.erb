<h1>Criar Palestras</h1>

<%= form_with model: @lecture, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, 'Tema da Palestra' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :duration, 'Duração (minutos)' %>
    <%= form.number_field :duration, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Salvar Palestra', class: 'btn btn-success' %>
  </div>

  <div class="form-group">
    <a class="btn btn-primary" href="<%= import_csv_lectures_path %>">Importar palestras via CSV</a>
  </div>
<% end %>
